                    <script>
                        $(document).ready(function (){
                            function toISODate(d) {
                                const z = n => ('0' + n).slice(-2);
                                return d.getFullYear() + '-' + z(d.getMonth()+1) + '-' + z(d.getDate());
                            }
                            function getHolidays(date) {
                                const getHolidays = $("#getHolidays").val();
                                return getHolidays.includes(date.toISOString().substring(0, 10));
                            }
                            function getWeekends(date) {
                                return (date.getDay() === 0 || date.getDay() === 6);
                            }
                            $("#appDate").flatpickr({
                                enableTime: false,
                                altInput: true,
                                altFormat: "l, M j, Y",
                                dateFormat: "Y-m-d",
                                defaultDate: $("#getAppDate").val(),
                                //minDate: new Date().fp_incr(1),
                                disable: [getWeekends, getHolidays],
                                locale: {
                                    "firstDayOfWeek": 0 // set start day of week to Monday
                                }
                            });

                            if($("#appDate").val()){
                                var appDate = $("#appDate").val();
                                var appTime = 0;
                                getAppTime(appDate, appTime);
                            }

                            if($("#getAppTime").val()){
                                var appDate = $("#appDate").val();
                                var appTime = $("#getAppTime").val();
                                getAppTime(appDate, appTime);
                            }

                            $("#appDate").change(function () {
                                var appDate = $(this).val();
                                var appTime = 0;
                                getAppTime(appDate, appTime);
                            });

                            function getAppTime(appDate, appTime){
                                $.ajax({
                                    type: "post",
                                    url: "../gcctravels/get_app_time.php",
                                    data: {appDate:appDate, appTime:appTime},
                                    cache: false,
                                    success: function (response) {
                                        $("#loadAppTime").html(response);
                                    }
                                });
                            }
                        });
                    </script>
